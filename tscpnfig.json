{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es2017",
      "outDir": "./dist",
      "baseUrl": "./src",
      "alwaysStrict": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "javascript.implicitProjectConfig.experimentalDecorators": true,
      "emitDecoratorMetadata": true,
	  "strictPropertyInitialization": false,
	  "moduleResolution": "node"
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }